<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_menu_display"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.peter.myapplication.MenuDisplayActivity"
    tools:showIn="@layout/activity_menu_display">

    <TextView
        android:id="@+id/truckName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="The food truck"
        android:textAlignment="center"
        android:textSize="30dp"
        android:textColor="@color/white"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="@color/orange"
        android:id="@+id/menu"
        android:dividerHeight="2dp"
        android:layout_below="@+id/foodtruckimage"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="14dp" />

    <ImageView
        app:srcCompat="@mipmap/ic_launcher"
        android:id="@+id/foodtruckimage"
        android:layout_width="150dp"
        android:layout_height="120dp"
        android:layout_below="@+id/truckName"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
